# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/execuhire"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# Stripe Configuration
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"

# Email Configuration (Optional)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-username"
SMTP_PASSWORD="your-smtp-password"
SMTP_FROM="noreply@execuhire.com"

# AWS S3 Configuration (Optional - for image uploads)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="your-aws-region"
AWS_BUCKET_NAME="your-s3-bucket-name"

# API Keys (Optional - for additional services)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
SENTRY_DSN="your-sentry-dsn"

# Feature Flags
ENABLE_STRIPE_PAYMENT=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AWS_UPLOAD=false
